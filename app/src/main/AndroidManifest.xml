<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.newface.new_face.new_face">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".IntroActivity"  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".Activity_chat_room" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".Activity_login" android:theme="@style/AppTheme.Dark" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".Activity_signup" android:theme="@style/AppTheme.Dark" android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".searchActivity" android:theme="@style/AppTheme.Dark" android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".MainActivity"/>
        <activity android:name=".Activity_character" android:windowSoftInputMode="stateAlwaysHidden"/>
    </application>
</manifest>